{
  "metadata": {
    "title": "My Blog",
    "description": "My second, super-cool blog."
  },
  "source": "source",
  "destination": "public",
  "plugins": {
    "metalsmith-ignore": [
      "**/.DS_Store",
      "unfinished/*", 
      "javascripts/**.*"
    ],
    "metalsmith-metallic": true,
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":permalink"
    },
    "metalsmith-templates": {
      "engine": "handlebars"
    },
    "metalsmith-assets": {
      "source": "source",
      "destination": "public"
    },
    "metalsmith-sitemap":{
      "output": "sitemap.xml",
      "hostname": "http://roadtolarissa.com"
    }
  }
}