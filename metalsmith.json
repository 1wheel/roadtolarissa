{
  "metadata": {
    "title": "My Blog",
    "description": "My second, super-cool blog."
  },
  "source": "source",
  "destination": "public",
  "plugins": {
    "metalsmith-ignore": [
      "**/.DS_Store",
      "unfinished/*"
    ],
    "metalsmith-metallic": true,
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "handlebars"
    },
    "metalsmith-assets": {
      "source": "source",
      "destination": "public"
    }
  }
}